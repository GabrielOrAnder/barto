<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <declare-styleable name="ButtonWithLoading">
        <attr name="text" format="string" />
        <attr name="enable" format="boolean" />
        <attr name="backgroundColor" format="color" />
        <attr name="customTextColor" format="reference|color"/>
        <attr name="size" format="enum">
            <enum name="DEFAULT" value="0" />
            <enum name="MINI" value="1" />
            <enum name="LARGE" value="2" />
            <enum name="LARGEST" value="3" />
        </attr>
    </declare-styleable>

    <!-- ====================== -->
    <!-- Loading Button Style   -->
    <!-- ====================== -->
    <eat-comment />

    <declare-styleable name="LoadingButton">
        <attr name="loadingButtonStyle" format="reference" />
        <attr name="buttonLabel" format="string" />
        <attr name="isLoading" format="boolean" />
        <attr name="enabled" format="boolean" />
    </declare-styleable>

</resources>